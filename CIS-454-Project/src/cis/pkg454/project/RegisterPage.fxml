<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="550.0" prefWidth="750.0" style="-fx-background-color: #3e7fe8;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cis.pkg454.project.RegisterPageController">
   <children>
      <HBox alignment="CENTER" prefHeight="550.0" prefWidth="750.0">
         <children>
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="500.0">
               <children>
                  <Text fill="#393939" stroke="WHITE" strokeType="OUTSIDE" text="Book Market">
                     <font>
                        <Font name="Arial" size="60.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                     </VBox.margin>
                  </Text>
                  <TextArea fx:id="usernameField" minHeight="20.0" prefHeight="30.0" promptText="Username">
                     <VBox.margin>
                        <Insets left="100.0" right="100.0" />
                     </VBox.margin>
                  </TextArea>
                  <PasswordField promptText="Password">
                     <VBox.margin>
                        <Insets bottom="10.0" left="100.0" right="100.0" top="10.0" />
                     </VBox.margin>
                  </PasswordField>
                  <TextArea fx:id="emailField" minHeight="20.0" prefHeight="30.0" promptText="Email">
                     <VBox.margin>
                        <Insets bottom="10.0" left="100.0" right="100.0" />
                     </VBox.margin>
                  </TextArea>
                  <Button fx:id="registerButton" alignment="CENTER" mnemonicParsing="false" onAction="#registerUser" style="-fx-background-color: orange;" text="Register" />
                  <Label fx:id="toLoginPageButton" onMouseClicked="#toLoginPage" text="Already have an account? Sign in here." textFill="#f29008" underline="true" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
