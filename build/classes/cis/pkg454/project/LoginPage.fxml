<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" fx:id="rootPane" prefHeight="550.0" prefWidth="750.0" style="-fx-background-color: #3e7fe8;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cis.pkg454.project.LoginPageController">
   <children>
      <HBox alignment="CENTER" prefHeight="550.0" prefWidth="750.0">
         <children>
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="500.0">
               <children>
                  <Text fill="#393939" stroke="WHITE" strokeType="OUTSIDE" text="Book Market">
                     <font>
                        <Font name="Arial" size="60.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                     </VBox.margin>
                  </Text>
                  <TextField fx:id="usernameField" promptText="Username">
                     <VBox.margin>
                        <Insets bottom="10.0" left="100.0" right="100.0" />
                     </VBox.margin>
                  </TextField>
                  <PasswordField fx:id="passwordField" promptText="Password">
                     <VBox.margin>
                        <Insets left="100.0" right="100.0" />
                     </VBox.margin>
                  </PasswordField>
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#login" style="-fx-background-color: orange;" text="Log In">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Label fx:id="registerLink" alignment="CENTER" onMouseClicked="#toRegisterPage" prefHeight="17.0" prefWidth="254.0" style="-fx-text-fill: orange;" text="Don't have an account? Register Here!" textFill="#e18d48" underline="true" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
